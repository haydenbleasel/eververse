{
  "$schema": "https://mintlify.com/schema.json",

  "name": "Eververse Docs",

  "logo": {
    "dark": "/images/logo-dark.svg",
    "light": "/images/logo-light.svg"
  },

  "background": { "style": "windows" },

  "codeBlock": {
    "mode": "auto"
  },

  "favicon": "/icon.png",

  "layout": "topnav",

  "colors": {
    "primary": "#000000",
    "light": "#000000",
    "dark": "#FFFFFF",
    "background": {
      "light": "#FFFFFF",
      "dark": "#000000"
    },
    "anchors": {
      "from": "#000000",
      "to": "#000000"
    }
  },

  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/haydenbleasel/eververse"
  },

  "search": {
    "prompt": "Search or ask..."
  },

  "tabs": [
    {
      "name": "API Reference",
      "url": "api-reference"
    }
  ],
  "anchors": [
    {
      "name": "Website",
      "icon": "house",
      "url": "https://www.eververse.ai/"
    },
    {
      "name": "App",
      "icon": "grid-2",
      "url": "https://app.eververse.ai/"
    },
    {
      "name": "Status",
      "icon": "signal-bars",
      "url": "https://status.haydenbleasel.com/"
    }
  ],
  "navigation": [
    {
      "group": "Get Started",
      "pages": ["introduction", "structure", "setup", "deploying"]
    },
    {
      "group": "API Documentation",
      "pages": ["api-reference/introduction"]
    },
    {
      "group": "Endpoint Examples",
      "pages": [
        "api-reference/endpoint/changelog/get",
        "api-reference/endpoint/features/create",
        "api-reference/endpoint/feedback/create"
      ]
    }
  ],
  "footerSocials": {
    "github": "https://github.com/eververse-ai"
  },
  "api": {
    "baseUrl": "https://api.eververse.ai",
    "auth": {
      "method": "bearer"
    }
  }
}
